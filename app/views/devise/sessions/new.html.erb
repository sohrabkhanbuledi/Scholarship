<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter your registered email", class: "text-box" %>
  </div>
<br>
  <div>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "text-box" %>
  </div>
<br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
<br>
  <div>
    <%= f.submit "Log in", class: "btn-submit" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
