<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.text_field :username, autofocus: true, :placeholder => "Enter your name", class: "text-box" %>
  </div>
<br>
  <div>
    <%= f.email_field :email, :placeholder => "Enter your email", class: "text-box" %>
  </div>
<br>
  <div>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "text-box" %>
  </div>
<br>
  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password ", class: "text-box" %>
  </div>
<br>
  <div>
    <%= f.file_field :avatar %>
  </div>
<br>
  <div>
    <%= f.submit "Sign up", class: "btn-submit" %>
  </div>
<% end %>

