<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", :placeholder => "New Password", class: "text-box" %>
  </div>
<br />
  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm New Password", class: "text-box" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Change my password", class: "btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
